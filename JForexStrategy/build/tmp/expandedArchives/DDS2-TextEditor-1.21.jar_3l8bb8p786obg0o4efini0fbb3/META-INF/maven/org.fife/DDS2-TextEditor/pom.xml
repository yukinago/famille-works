<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.fife</groupId>
    <artifactId>DDS2-TextEditor</artifactId>
    <name>DDS2-TextEditor</name>
    <version>1.21</version>

    <scm>
        <connection>
            scm:svn:https://repo.site.dukascopy.com/JAVA_APPS/DDS2/Platforms/JForex/TextEditor/trunk
        </connection>
    </scm>
    <properties>
        <project.build.sourceEncoding>UTF-8
        </project.build.sourceEncoding>
    </properties>
    <contributors>
        <contributor>
            <name>Kaspars Rinkevics</name>
        </contributor>
    </contributors>
    <distributionManagement>
        <repository>
            <id>dukascopy</id>
            <name>Dukascopy releases</name>
            <url>https://repo.site.dukascopy.com:8081/artifactory/dukascopy</url>
        </repository>
        <snapshotRepository>
            <id>dukascopy</id>
            <name>Dukascopy snapshots</name>
            <url>https://repo.site.dukascopy.com:8081/artifactory/dukascopy-snapshots</url>
        </snapshotRepository>
    </distributionManagement>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>dummytest
        </testSourceDirectory>
        <resources>
            <resource>
                <targetPath>./</targetPath>
                <filtering>false</filtering>
                <directory>resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <inherited>true</inherited>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <inherited>true</inherited>
                <configuration>
                    <archive>
                    	<index>true</index>
                        <manifest>
                            <addDefaultImplementationEntries>
                                true
                            </addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
							<Permissions>all-permissions</Permissions>
							<Codebase>*</Codebase>
						</manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.4</version>
        </dependency>
        <dependency>
          <groupId>apache-oro</groupId>
          <artifactId>jakarta-oro</artifactId>
          <version>2.0.8</version>
        </dependency>

    </dependencies>
</project>
 
